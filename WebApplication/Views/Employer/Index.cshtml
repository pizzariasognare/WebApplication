@model IList<WebApplication.Models.Employer>

@{
    ViewBag.Title = "Funcionários";
}

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-right">
                <a href="@Url.Action("Create", "Employer")" class="btn btn-primary" title="Adicionar funcionário"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
            </div>
            <h3 class="bars">Funcionários</h3>
            <hr />
        </div>
        <div>
            <table class="table table-striped table-bordered datatable" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>                                                
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.enabled == 0 ? "danger" : "")">
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>                            
                            <td>
                                <a href="@Url.Action("Details", "Employer", new { id = item.id })" class="btn btn-default" title="Visualizar funcionário"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
                            </td>
                        </tr>
                    }

                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4">Nenhum Funcionário encontrado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>