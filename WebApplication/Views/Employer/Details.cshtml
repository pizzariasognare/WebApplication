@model WebApplication.Models.Employer

@{
    ViewBag.Title = "Funcionário";
}

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="dropdown pull-right">
                <button class="btn btn-danger dropdown-toggle" type="button" id="mais-dropdown-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Mais <span class="caret"></span></button>
                <ul class="dropdown-menu" aria-labelledby="mais-dropdown-menu">
                    <li>
                        <a href="@Url.Action("Create", "Employer", new { id = Model.id })" title="Adicionar funcionário"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar funcionário</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Edit", "Employer", new { id = Model.id })" title="Editar funcionário"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar funcionário</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Employer")" title="Visualizar funcionários"><span class="glyphicon glyphicon-th" aria-hidden="true"></span> Visualizar funcionários</a>
                    </li>
                    <li role="separator" class="divider"></li>
                    <li style="@(Model.user_id.HasValue ? "display:none" : "")">
                        <a href="@Url.Action("CreateUser", "Employer", new { id = Model.id })" title="Adicionar usuário"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar usuário</a>
                    </li>
                    <li style="@(!Model.user_id.HasValue ? "display:none" : "")">
                        <a href="@Url.Action("EditUser", "Employer", new { id = Model.id })" title="Editar usuário"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar usuário</a>
                    </li>
                </ul>
            </div>
            <h3 class="bars">Funcionário</h3>
        </div>
        <hr />
        <div>
            <dl class="dl-horizontal">
                <dt>Nome</dt>
                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>
                <dt>E-mail</dt>
                <dd>
                    @Html.DisplayFor(model => model.User.email)
                </dd>
                <dt>Telefone</dt>
                <dd>
                    @Html.DisplayFor(model => model.phone)
                </dd>
                <dt>Habilitado</dt>
                <dd>
                    @Html.CheckBox("enabled-ckb", ((Model.enabled) == 1 ? true : false), htmlAttributes: new { @disabled = "disabled" })
                </dd>
            </dl>
        </div>
    </div>
</div>
