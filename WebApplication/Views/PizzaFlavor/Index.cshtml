@model IList<WebApplication.Models.PizzaFlavor>

@{    
    ViewBag.Title = "Pizzas";
}

<div class="row">
    <div class="col-md-11">
        <div>
            <div class="pull-right">
            </div>
            <h3 class="bars">Pizzas</h3>
            <hr />
        </div>
        <div>
            <table class="table table-striped table-bordered datatable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sabor</th>
                        <th>Pequena <p><small>(25 cm)</small></p></th>
                        <th>Grande <p><small>(35 cm)</small></p></th>
                        <th>Gigante <p><small>(45 cm)</small></p></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <b>@Html.DisplayFor(modelItem => item.name)</b>

                                @foreach (var ingredit in item.Ingredient)
                                {
                                    <p><small>@(ingredit.name)</small></p>
                                }
                            </td>

                            @foreach (var pizza in item.Pizza)
                            {
                                <td>
                                    R$@Html.DisplayFor(modelItem => pizza.price)
                                </td>
                            }
                        </tr>
                    }

                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="5">Nenhuma pizza encontrada.</td>
                        </tr>
                    }
                </tbody>
            </table>
            <p class="text-danger">* Todas as pizzas salgadas vêem com molho de tomate, orégano e azeitona.</p>
            <p class="text-danger">* Todas as pizzas salgadas vêem com borda de cream cheese <b>grátis</b>.</p>
            <p class="text-danger">* Todas as pizzas doces vêem com borda de doce de leite <b>grátis</b>.</p>
        </div>
    </div>
</div>