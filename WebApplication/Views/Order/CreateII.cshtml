@{
    ViewBag.Title = "Pedido";
}

<div class="row">
    <div class="col-xs-12">
        <div>
            <div class="pull-right">
            </div>
            <h3 class="bars">Cliente</h3>
        </div>
        <div>
            <form id="customer_form" name="customer_form" class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-4">
                        <label for="phone">Telefone</label>
                        <input class="form-control" id="phone" name="phone" type="number" value="" />
                    </div>
                    <div class="col-xs-8">
                        <label for="name">Nome</label>
                        <input class="form-control" id="name" maxlength="100" name="name" type="text" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-3">
                        <label for="zip_code">CEP</label>
                        <input class="form-control" id="zip_code" max="99999999" name="zip_code" type="number" value="" />
                    </div>
                    <div class="col-xs-7">
                        <label for="address">Endereço</label>
                        <input class="form-control" id="address" maxlength="255" name="address" type="text" value="" />
                    </div>
                    <div class="col-xs-2">
                        <label for="number">Número</label>
                        <input class="form-control" id="number" maxlength="11" name="number" type="number" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-5">
                        <label for="number">Complemento</label>
                        <input class="form-control" id="complement" maxlength="50" name="complement" type="text" value="" />
                    </div>
                    <div class="col-xs-7">
                        <label for="city">Referência</label>
                        <input class="form-control" id="reference_point" maxlength="100" name="reference_point" type="text" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-3">
                        <label for="neighborhood">Bairro</label>
                        <input class="form-control" id="neighborhood" maxlength="50" name="neighborhood" type="text" value="" />
                    </div>
                    <div class="col-xs-3">
                        <label for="city">Cidade</label>
                        <input class="form-control" id="city" maxlength="50" name="city" type="text" value="" />
                    </div>
                    <div class="col-xs-2">
                        <label for="city">UF</label>
                        <input class="form-control" id="acronym_city" maxlength="2" name="acronym_city" type="text" value="" />
                    </div>
                    <div class="col-xs-4">
                        <input id="customer_id" name="customer_id" type="hidden" value="" />
                        <input id="latitude" name="latitude" type="hidden" value="" />
                        <input id="longitude" name="longitude" type="hidden" value="" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-xs-12">
        <h3 class="bars">Pizzas</h3>
        <div>
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-4">
                        <label class="control-label" for="pizza_size">Tamanho: </label>
                        <p>
                            <input type="radio" id="pizza_size_1" name="pizza_size" value="1" checked> Pequena
                            <input type="radio" id="pizza_size_2" name="pizza_size" value="2"> Grande
                            <input type="radio" id="pizza_size_3" name="pizza_size" value="3"> Gigante
                        </p>
                    </div>
                    <div class="col-xs-3">
                        <label class="control-label" for="amount">Quantidade: </label>
                        <p>
                            <input type="radio" id="amount_1" name="amount" value="1" checked> Inteira
                            <input type="radio" id="amount_05" name="amount" value="0.5"> 1/2
                            <input type="radio" id="amount_033" name="amount" value="0.33"> 1/3
                            <input type="radio" id="amount_025" name="amount" value="0.25"> 1/4
                        <p>
                    </div>
                    <div class="col-xs-5">
                        <label class="control-label" for="amount">Sabor: </label>
                        <p>
                            <select id="pizza_flavor" name="pizza_flavor" class="col-xs-11">
                                <option value="0">Selecione</option>
                            </select>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-xs-12">
        <h3 class="bars">Bebidas</h3>
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-xs-5">
                    <label class="control-label" for="amount">Bebida: </label>
                    <p>
                        <select id="drink" name="drink" class="col-xs-11">
                            <option value="0">Selecione</option>
                        </select>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<div class="row">
    <div class="col-xs-12">
        <h3 class="bars">Pedido</h3>
    </div>
</div>

@Scripts.Render("~/Scripts/Order/CreateII.js")