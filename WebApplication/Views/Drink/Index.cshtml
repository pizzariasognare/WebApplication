@model IList<WebApplication.Models.Drink>

@{
    Layout = "~/Views/Shared/_OpenLayout.cshtml";
    ViewBag.Title = "Bebidas";
}

<div class="row">
    <div class="col-md-11">
        <div>
            <div class="pull-right">
            </div>
            <h3 class="bars">Bebidas</h3>
            <hr />
        </div>
        <div>
            <table class="table table-striped table-bordered datatable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Bebida</th>
                        <th>Tipo</th>
                        <th>Preço</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <b>@Html.DisplayFor(modelItem => item.name)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DrinkType.name)
                            </td>
                            <td>
                                R$@Html.DisplayFor(modelItem => item.price)
                            </td>
                        </tr>
                    }

                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="5">Nenhuma bebida encontrada.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>