@model IList<WebApplication.Models.TotalOrdersDeliveredToday>

@{
    ViewBag.Title = "Entregas";
}

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-right">
            </div>
            <h3 class="bars">Entregas</h3>
            <hr />
        </div>
        <div>
            <table class="table table-striped table-bordered datatable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Entregador</th>
                        <th>Total</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.order_total)
                            </td>
                            <td>
                                R$ @Html.DisplayFor(modelItem => item.delivery_price_total)
                            </td>
                        </tr>
                    }

                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="3">Nenhuma entrega encontrada.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>