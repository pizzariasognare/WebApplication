@model WebApplication.Models.Customer

@{
    ViewBag.Title = "Cliente";
}

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-right">
                <span style="@(Model.user_id.HasValue ? "display:none" : "")">
                    <a href="@Url.Action("CreateUser", "Customer", new { id = Model.id })" class="btn btn-success" title="Adicionar usuário"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a>&nbsp; &nbsp;
                </span>
                <a href="@Url.Action("Create", "CustomerAddress", new { id = Model.id })" class="btn btn-default" title="Adicionar endereço"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>&nbsp; &nbsp;
                <a href="@Url.Action("Create", "Customer", new { id = Model.id })" class="btn btn-primary" title="Adicionar cliente"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>&nbsp;&nbsp;
                <a href="@Url.Action("Edit", "Customer", new { id = Model.id })" class="btn btn-warning" title="Editar cliente"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>&nbsp;&nbsp;
                <a href="@Url.Action("Index", "Customer")" class="btn btn-success" title="Visualizar clientes"><span class="glyphicon glyphicon-th" aria-hidden="true"></span></a>
            </div>
            <h3 class="bars">Cliente</h3>
            <hr />
        </div>
        <div>
            <dl class="dl-horizontal">
                <dt>Nome</dt>
                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>
                <dt>E-mail</dt>
                <dd>
                    @Html.DisplayFor(model => model.User.email)
                </dd>
                <dt>Telefone</dt>
                <dd>
                    @Html.DisplayFor(model => model.phone)
                </dd>
                <dt>Data de Nascimento</dt>
                <dd>
                    @(Model.birth_date.HasValue ? Model.birth_date.Value.ToString("dd/MM/yyyy") : "")
                </dd>
                <dt>Habilitado</dt>
                <dd>
                    @Html.CheckBox("enabled-ckb", ((Model.enabled) == 1 ? true : false), htmlAttributes: new { @disabled = "disabled" })
                </dd>
            </dl>
        </div>
        <div>
            @if (Model.CustomerAddress.Count() > 0)
            {
                <h3 class="bars">Endereços</h3>
                foreach (var item in Model.CustomerAddress)
                {
                    <div class="pull-right">
                        <a href="@Url.Action("Edit", "CustomerAddress", new { id = item.id })" class="btn btn-warning" title="Editar endereço"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    </div>
                    <dl class="dl-horizontal">
                        <dt>
                            CEP
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.zip_code)
                        </dd>
                        <dt>
                            Endereço
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.address)
                        </dd>
                        <dt>
                            Número
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.number)
                        </dd>
                        <dt>
                            Complemento
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.complement)
                        </dd>
                        <dt>
                            Bairro
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.neighborhood)
                        </dd>
                        <dt>
                            Cidade
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.city)
                        </dd>
                        <dt>
                            UF
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.acronym_city)
                        </dd>
                        <dt>
                            Referência
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.reference_point)
                        </dd>
                        <dt>
                            Latitude
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.latitude)
                        </dd>
                        <dt>
                            Longitude
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.longitude)
                        </dd>
                        <dt>
                            Habilitado
                        </dt>
                        <dd>
                            @Html.CheckBox("enabled-ckb", ((item.enabled) == 1 ? true : false), htmlAttributes: new { @disabled = "disabled" })
                        </dd>
                    </dl>
                }
            }
        </div>
    </div>
</div>
